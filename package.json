{
  "name": "typescript-library-boilerplate",
  "version": "1.0.0",
  "description": "A personal TypeScript Boilerplate for a Library",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Sylvain DesveÃÅ <sylvain.desve@gmail.com>",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "clean": "npm-run-all clean:*",
    "clean:build": "rm -Rf lib",
    "clean:doc": "rm -Rf ./docs/*",
    "build": "npm run clean:build && tsc",
    "bundle": "webpack",
    "doc": "npm run clean:doc && npm-run-all doc:*",
    "doc:generate": "typedoc",
    "doc:add-theme": "printf 'theme: jekyll-theme-cayman' > ./docs/_config.yml",
    "lint": "tslint -c tslint.json \"src/**/*.ts\"",
    "lint:fix": "tslint --fix -c tslint.json \"src/**/*.ts\"",
    "prettier": "prettier --write \"{src,spec}/**/*.ts\"",
    "test": "nyc mocha --opts spec/support/default.opts \"spec/**/*.spec.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm-run-all doc:* && git add ./docs"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix -c tslint.json",
      "prettier --write",
      "git add"
    ]
  },
  "files": [
    "doc",
    "lib",
    "spec",
    "src"
  ],
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.2.5",
    "@types/mocha": "^5.2.7",
    "@types/webpack": "^4.39.8",
    "awesome-typescript-loader": "^5.2.1",
    "chai": "^4.2.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "mocha": "^6.2.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.5.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typedoc": "^0.15.2",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  }
}
