{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "typescript-library-boilerplate": ["."]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
